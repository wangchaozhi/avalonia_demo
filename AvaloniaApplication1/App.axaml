<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApplication1.App"
             xmlns:local="using:AvaloniaApplication1"
             xmlns:views="using:AvaloniaApplication1.Views"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />

        <!-- Borderless + draggable base window template with inherited close button -->
        <Style Selector="views|BorderlessDraggableWindow">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <ContentPresenter Content="{TemplateBinding Content}"/>

                        <Button Width="30"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,6,6,0"
                                Background="Transparent"
                                Foreground="Red"
                                FontWeight="Bold"
                                Cursor="Hand"
                                IsVisible="{TemplateBinding ShowSystemCloseButton}"
                                Command="{TemplateBinding CloseWindowCommand}"
                                Content="X"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
    </Application.Styles>
</Application>